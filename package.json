{
  "name": "shopify-app-node",
  "private": true,
  "scripts": {
    "build": "concurrently npm:build:*",
    "build:embedded": "vite build -c ./apps/embedded-app/vite.config.js",
    "build:public": "vite build -c ./apps/public-app/vite.config.js",
    "debug": "node --inspect-brk server/index.js",
    "dev": "cross-env NODE_ENV=development nodemon server/index.js --watch ./server",
    "prepare": "husky install",
    "preserve": "npm run build",
    "serve": "cross-env NODE_ENV=production node server/index.js",
    "start": "npm run serve",
    "test": "vitest --reporter=verbose"
  },
  "type": "module",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=16.13.0"
  },
  "dependencies": {
    "@apollo/client": "^3.5.10",
    "@reduxjs/toolkit": "^1.9.1",
    "@shopify/app-bridge": "^2.0.22",
    "@shopify/app-bridge-react": "^2.0.26",
    "@shopify/app-bridge-utils": "^3.4.2",
    "@shopify/polaris": "^9.14.1",
    "@shopify/shopify-api": "^3.0.0",
    "@vitejs/plugin-react": "2.1.0",
    "compression": "^1.7.4",
    "concurrently": "^7.5.0",
    "cookie-parser": "^1.4.6",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.0",
    "express": "^4.18.1",
    "graphql": "^16.5.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^8.0.5",
    "react-router-dom": "^6.4.5",
    "serve-static": "^1.14.1",
    "vhost": "^3.0.2",
    "vite": "^3.1.8",
    "ws": "^8.9.0"
  },
  "devDependencies": {
    "husky": "^8.0.1",
    "nodemon": "^2.0.16",
    "prettier": "^2.6.2",
    "pretty-quick": "^3.1.3",
    "supertest": "^6.2.3"
  }
}
